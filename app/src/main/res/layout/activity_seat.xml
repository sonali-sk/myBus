<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeatActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/seat_text"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:text="Select a seat"
        android:textSize="30sp" />
    <Spinner
        android:id="@+id/seat_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        />
    <TextView
        android:id="@+id/board_text"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:text="Boarding point"
        android:textSize="30sp" />
    <Spinner
        android:id="@+id/board_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        />
    <TextView
        android:id="@+id/NoS1"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:text="Dropping point"
        android:textSize="30sp" />
    <Spinner
        android:id="@+id/arrive_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        />
    </LinearLayout>
    <Button
        android:id="@+id/conf"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="CONFIRM"/>

</RelativeLayout>